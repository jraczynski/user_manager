<% provide(:title, 'Lista') %>
<h1>Lista użytkowników</h1>

<%= will_paginate %>

<table class="table table-striped table-bordered table-condensed">
  <thead>
    <tr>
      <th>Nazwisko</th>
      <th>Imię</th>
      <th>Adres e-mail</th>
      <th>Nazwa użytkownika</th>
      <th>Profil</th>
      <th>Edytuj</th>
      <th>Usuń</th>
    </tr>
  </thead>
  <%= render @users.sort_by! {|user| user.last_name} %>
</table>

<%= will_paginate %>